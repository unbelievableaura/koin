{
    "name": "koin-deck-retro-player",
    "version": "0.1.0",
    "description": "The premium cloud emulation engine for Koin Deck. High-performance, preservation-focused retro gaming in the browser.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/muditjuneja/koin-deck-retro-player"
    },
    "scripts": {
        "build": "tsup",
        "build:element": "tsup --config tsup.element.config.ts",
        "dev": "tsup --watch",
        "lint": "eslint src",
        "postinstall": "patch-package"
    },
    "keywords": [
        "retro",
        "emulator",
        "nostalgist",
        "react",
        "game",
        "koin-deck"
    ],
    "author": "Mudit Juneja",
    "license": "MIT",
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "clsx": "^2.0.0",
        "framer-motion": "^11.0.0",
        "lucide-react": "^0.300.0",
        "nostalgist": "^0.19.0",
        "tailwind-merge": "^2.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "autoprefixer": "^10.0.0",
        "patch-package": "^8.0.1",
        "postcss": "^8.0.0",
        "tailwindcss": "^3.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    }
}